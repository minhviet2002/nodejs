          {{/ifeq}}
          {{#ifeq product.isFreeShip false}}
            <option value="">------------- Is-Freeship Option -------------</option>
            <option selected value="false">False</option>
            <option value="true">True</option>
          {{/ifeq}}
        </select>

      </div>
      {{! Count }}
