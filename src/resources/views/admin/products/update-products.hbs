        <label for="exampleFormControlInput1" class="form-label">Promotion
          Percent</label>
        <input
          type="text"
          name="promotionPercent"
          value="{{product.promotionPercent}}"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Phần trăm khuyến mãi"
          required
        />
      </div>
      {{! isFreeship}}
      <div class="mb-3 flex">
        <label
          for="exampleFormControlInput1"
          class="form-label"
        >Is-Freeship</label>
        <select
          name="isFreeShip"
          class="form-select max-width"
          aria-label="Default select example"
          required
        >
          {{#ifeq product.isFreeShip true}}
            <option value="">------------- Is-Freeship Option -------------</option>
