<div class="container">
  <br /><h2>Cập nhật sản phẩm</h2><br />
  <div><a href="/admin/products/{{categorie.slug}}" class="btn btn-primary">Quay
      lại</a></div><br />
  <form
    method="post"
    action="./update?_method=PUT"
    style="padding-left: 20px;"
    class="row g-3"
  >
    <div class="col">
      <div class="mb-3 flex">
        <label
          for="exampleFormControlInput1"
          class="form-label"
        >Categories</label>
        <select
          class="form-select max-width"
          aria-label="Default select example"
          name="categorie"
          required
        >
          <option
            selected
            value="{{categorie.searchTerm}}"
          >{{categorie.name}}</option>
        </select>
      </div>
      <div class="mb-3 flex">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input
          type="text"
          name="title"
          value="{{product.title}}"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Tiêu đề"
          required
        />
      </div>
      {{! Description }}
      <div class="mb-3 flex">
        <label
          for="exampleFormControlTextarea1"
          class="form-label"
        >Description</label>
        <textarea
          name="description"
          class="form-control"
          id="exampleFormControlTextarea1"
          rows="3"
        >{{product.description}}</textarea>
      </div>
      {{! Image }}
      <div class="mb-3 flex">
        <label for="exampleFormControlInput1" class="form-label">Link Image</label>
        <input
          type="text"
          name="image"
          value="{{product.image}}"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Đường dẫn file ảnh"
          required
        />
      </div>
      {{! originalPrice }}
      <div class="mb-3 flex">
        <label for="exampleFormControlInput1" class="form-label">Original Price</label>
        <input
          type="text"
          name="originalPrice"
          value="{{product.originalPrice}}"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Giá gốc"
          required
        />
      </div>
      {{! salePrice }}
      <div class="mb-3 flex">
        <label for="exampleFormControlInput1" class="form-label">Sale Price</label>
        <input
          type="text"
          name="salePrice"
          value="{{product.salePrice}}"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Giá giảm"
          required
        />
      </div>
      {{! isPrômtion}}
      <div class="mb-3 flex">
        <label
          for="exampleFormControlInput1"
          class="form-label"
        >Is-Promotion</label>
        <select
          name="isPromotion"
          class="form-select max-width"
          aria-label="Default select example"
          required
        >
          {{#ifeq product.isPromotion true}}
            <option selected value="">------------- Is-Promotion Option
              -------------</option>
            <option value="false">False</option>
            <option selected value="true">True</option>
          {{/ifeq}}
          {{#ifeq product.isPromotion false}}
            <option selected value="">------------- Is-Promotion Option
              -------------</option>
            <option selected value="false">False</option>
            <option value="true">True</option>
          {{/ifeq}}

        </select>
      </div>
      {{! promotionPercent }}
